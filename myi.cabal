name:                myi
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            https://github.com/timbalam/myi#readme
license:             BSD3
license-file:        LICENSE
author:              Tim Lamberton
maintainer:          tim.lamberton@gmail.com
copyright:           (c) 2016 Tim Lamberton
category:            Compiler
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
                     , Types.Parser
                     , Types.Parser.Short
                     , Types
                     , Types.Error
                     , Types.Expr
                     , Types.Classes
                     , Eval
                     , Version
                     , Parser
                     , Expr
-- other-modules:
  build-depends:       base >= 4.9
                     , containers >= 0.5.8
                     , text
                     , mtl
                     , free
                     , bound
                     , parsec
  default-language:    Haskell2010

executable myc-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , myi
  default-language:    Haskell2010

test-suite myc-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       Test.Parser.Short
                     , Test.Parser
                     , Test.Expr
                     , Test.Eval
                     , Test.Import
  build-depends:       base
                     , myi
                     , HUnit
                     , text
                     , parsec
                     , mtl
                     , containers
                     , free
                     , bound
                     , directory
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/timbalam/myi
